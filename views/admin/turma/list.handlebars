<h1>Lista Turmas</h1>
<table class="table table-striped table-hover">
    {{#each turmas}}
    <tr>
        <th>ID</th>
        <th>Descrição</th>
        <th>Created At</th>
        <th style="text-align: center;">Config</th>
    </tr>
    <tr>
        <td>{{id_turma}}</td>
        <td>{{descricao}}</td>
        <td>{{createdAt}}</td>
        <td style="text-align: center;">
            <a href="/turma/form/{{id_turma}}" class="btn btn-primary">Edit</a>
            <button onclick="deleteTurma({{id_turma}})" class="btn btn-primary">Delete</button>
        </td>
    </tr>
    {{/each}}
</table>
{{>_alert}}