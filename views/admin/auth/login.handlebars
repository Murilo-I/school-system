<h1 class="mb-3 fw-normal">Please sign in</h1>
<form action="/auth/login" method="post" class="sign-form">
    <div class="form-floating">
        <input type="text" class="form-control" id="username" name="username" placeholder="Username">
        <label for="username">Username</label>
    </div>
    <div class="form-floating">
        <input type="password" class="form-control" id="senha" name="senha" placeholder="Password">
        <label for="senha">Senha</label>
    </div>
    <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault" style="color: white;">
            Remember me
        </label>
    </div>
    <div class="sign-buttons">
        <button class="btn btn-primary" type="submit">Sign in</button>
        <a href="/auth/signup" class="btn btn-primary">Or sign up</a>
    </div>
</form>
{{>_alert}}